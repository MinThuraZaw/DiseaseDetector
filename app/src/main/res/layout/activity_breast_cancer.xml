<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:focusable="true"
        android:layout_marginBottom="20dp"
        android:focusableInTouchMode="true"
        tools:context=".activities.DiabetesActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_bcancer"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:titleTextColor="@android:color/white"
            app:title="Detect Breast Cancer"
            app:popupTheme="@style/PopupTheme"
            android:theme="@style/ToolbarTheme"/>

        <RelativeLayout
            android:layout_below="@id/toolbar_bcancer"
            android:id="@+id/layout_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/disease_type_border">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_bc_meanredius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textAlignment="center"
                android:text="Lump's mean radius"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_bc_meanradius"
                android:layout_below="@id/tv_bc_meanredius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:inputType="numberDecimal"
                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_two"
            android:layout_below="@id/layout_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/disease_type_border">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_bc_meantexture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textAlignment="center"
                android:text="Lump's mean texture"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_bc_meantexture"
                android:layout_below="@id/tv_bc_meantexture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:inputType="numberDecimal"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_three"
            android:layout_below="@id/layout_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/disease_type_border">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_bc_meanperimeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textAlignment="center"
                android:text="Lump's mean perimeter"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_bc_meanperimeter"
                android:layout_below="@id/tv_bc_meanperimeter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:inputType="numberDecimal" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_four"
            android:layout_below="@id/layout_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/disease_type_border">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_bc_meanarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:textAlignment="center"
                android:text="Lump's mean area"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_bc_meanarea"
                android:layout_below="@id/tv_bc_meanarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:inputType="numberDecimal"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_five"
            android:layout_below="@id/layout_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/disease_type_border">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_bc_meansmoothness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:textAlignment="center"
                android:text="Lump's mean smoothness"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_bc_meansmoothness"
                android:layout_below="@id/tv_bc_meansmoothness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:inputType="numberDecimal" />

        </RelativeLayout>



        <androidx.appcompat.widget.AppCompatButton
            android:layout_below="@id/layout_five"
            android:id="@+id/btn_bc_checkup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="50dp"
            android:text="Check Up"
            android:textColor="@android:color/white"
            android:background="@drawable/check_round_btn"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</ScrollView>

